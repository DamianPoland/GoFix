<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_ripple_effect"
        android:elevation="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewOrderIndustryAndService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="order"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textViewOrderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="order"
            android:textColor="@android:color/black"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/textViewOrderCraftsman_craftsman_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="craftsman_name"
            android:textColor="@color/colorPrimaryDarkBlue900"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/textViewOrderCraftsman_craftsman_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="craftsman_email"
            android:textColor="@color/colorPrimaryDarkBlue900"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/textViewOrderCraftsman_craftsman_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="craftsman_phone"
            android:textColor="@color/colorPrimaryDarkBlue900"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/textViewOrderCraftsman_craftsman_offer_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="offer_price"
            android:textColor="@color/colorPrimaryDarkBlue900"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/textViewOrderCraftsman_craftsman_offer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="offer_details"
            android:textColor="@color/colorPrimaryDarkBlue900"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>



        <TextView
            android:id="@+id/buttonOrdersToChoseCraftsman"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="  Wybierz wykonawcÄ™  "
            android:background="@drawable/button_custom"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"/>


    </LinearLayout>

</LinearLayout>