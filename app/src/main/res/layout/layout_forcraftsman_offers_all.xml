<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_ripple_effect"
        android:elevation="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAdapterCraftsmanOffersAllPicketOrNot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:text="ZATWIERDZONE ZLECENIE"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewAdapterCraftsmanOffersAllCityAndClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="order"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textViewAdapterCraftsmanOffersAllDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="order"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewAdapterCraftsmanOffersAllPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="order"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>